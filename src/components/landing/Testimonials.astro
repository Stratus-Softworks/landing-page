<script>
  let currentIndex = 0;
  let interval;

  // Function to show the active slide
  function showSlide(index) {
    const slides = document.querySelectorAll(".testimonial-slide");
    const indicators = document.querySelectorAll(".carousel-indicator");

    slides.forEach((slide, i) => {
      slide.classList.toggle("hidden", i !== index);
      indicators[i].classList.toggle("bg-[#ed642c]", i === index);
      indicators[i].classList.toggle("bg-gray-600", i !== index);
    });

    currentIndex = index;
  }

  // Move to the next slide
  function nextSlide() {
    const slides = document.querySelectorAll(".testimonial-slide");
    showSlide((currentIndex + 1) % slides.length);
  }

  // Start auto-scroll
  function startAutoScroll() {
    interval = setInterval(nextSlide, 15000);
  }

  // Stop auto-scroll (optional for debugging or manual navigation)
  function stopAutoScroll() {
    clearInterval(interval);
  }

  // Event listener for slide indicators
  function setupIndicators() {
    const indicators = document.querySelectorAll(".carousel-indicator");
    indicators.forEach((indicator, i) => {
      indicator.addEventListener("click", () => {
        showSlide(i);
        stopAutoScroll(); // Optional: stop auto-scroll on manual interaction
        startAutoScroll(); // Restart auto-scroll after interaction
      });
    });
  }

  // Initialize carousel
  window.addEventListener("load", () => {
    showSlide(0);
    startAutoScroll();
    setupIndicators();
  });
</script>

