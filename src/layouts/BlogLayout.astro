---
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";

export interface Props {
  title: string;
  date: string;
  author: string;
}
const { title, date, author } = Astro.props;
---

<html lang="en" class="selection:bg-orange selection:text-white">
  <head>
    <BaseHead />
    <title>{title}</title>
    <meta name="description" content={title} />
  </head>
  <body class="mx-auto bg-black 2xl:max-w-7xl">
    <Navigation />
      <section class="px-8 py-12 border-white/20 mx-auto border-white/20 border-x max-w-7xl border-b">

      <article class="prose prose-invert lg:prose-xl text-white mx-auto mt-8">
        <slot />
      </article>
      </section>

    <Footer />
  </body>
</html>
